<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/user_sign_in.css">
<script src="https://kit.fontawesome.com/987ca33d7e.js" crossorigin="anonymous"></script>
<div class="login-form">
  <form action="/users/create-session" method="POST">
    <h1>Sign In</h1>

    <div class="form-group">
      <input type="email" name="email" placeholder="E-mail Address" required>
      <span class="input-icon"><i class="fa fa-envelope"></i></span>
    </div>

    <div class="form-group">
      <input type="password" name="password" placeholder="Password" required>
      <span class="input-icon"><i class="fa fa-lock"></i></span>
    </div>   

    <button class="login-btn">Login</button> 

    <div class="seperator"><b>or</b></div>

    <p>Sign in with your social media account</p>
    <!-- Social login buttons -->
    <div class="social-icon">
      <a href="/users/auth/google"><button type="button"><i class="fab fa-google"></i></i></button></a>
    </div>

  </form>
</div>
